@model TestTaskMVC.Models.CombinedModel 

<h2>Меню администратора</h2>
<h3>Напитки</h3>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Изображение</th>
            <th>Нзавание</th>
            <th>Количество</th>
            <th>Стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td><img src="@product.ImgLink" alt="нет изображения" height="80" width="80"/></td>
                <td>@product.Name</td>
                <td>@product.Quantity</td>
                <td>@product.Price руб</td>
                <td>

                    <a role="button" class="btn btn-primary" onclick="getEditProduct('@product.Id')">
                        Редактировать
                    </a>
                </td>
                <td>
                    <a role="button" class="btn btn-outline-danger" onclick="deleteProduct('@product.Id')">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a role="button" class="btn btn-sm btn-primary" onclick="getCreateProduct()">Добавить напиток</a>

<h3>Монеты</h3>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Номинал</th>
            <th>Количество</th>
            <th>Доступность</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coin in Model.Coins)
        {
            <tr>
                <th>@coin.Value</th>
                <td>@coin.Quantity</td>
                <td>@coin.Access</td>
                <td>

                    <a role="button" class="btn btn-primary" onclick="getEditCoin('@coin.Id')">
                        Редактировать
                    </a>
                </td>
                <td>
                    <a role="button" class="btn btn-outline-danger" onclick="deleteCoin('@coin.Id')">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a role="button" class="btn btn-sm btn-primary" onclick="getCreateCoin()">Добавить монету</a>


